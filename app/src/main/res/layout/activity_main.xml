<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<Space
    android:id="@+id/space2"
    android:layout_width="30dp"
    android:layout_height="30dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="@+id/button2"
    tools:layout_editor_absoluteY="665dp" />

<Space
    android:id="@+id/space"
    android:layout_width="30dp"
    android:layout_height="30dp"
    app:layout_constraintEnd_toStartOf="@+id/button"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    tools:layout_editor_absoluteY="665dp" />

    <Button
    android:id="@+id/button"
    android:layout_width="174dp"
    android:layout_height="50dp"
    android:layout_marginBottom="36dp"
    android:background="#00ff00"
    android:clickable="true"
    android:onClick="Generated"
    android:text="Сгенерировать"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/button2"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="@+id/space" />

<Button
    android:id="@+id/button2"
    android:layout_width="174dp"
    android:layout_height="50dp"
    android:layout_marginBottom="36dp"
    android:background="#FFA500"
    android:clickable="true"
    android:onClick="Copy"
    android:text="Скопировать"
    android:layout_marginLeft="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/space2"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="@+id/button" />

<TextView
    android:id="@+id/textView"
    android:layout_width="379dp"
    android:layout_height="154dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/edit_text_style"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:text=""
    android:textColor="#000000"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="167dp"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:text="Длина пароля"
    app:layout_constraintEnd_toStartOf="@+id/editTextNumber"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Switch
        android:id="@+id/switch0"
        android:layout_width="309dp"
        android:layout_height="62dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:text="Цифры"
        app:layout_constraintBottom_toTopOf="@+id/switch1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

<Switch
    android:id="@+id/switch1"
    android:layout_width="309dp"
    android:layout_height="62dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:scaleX="1.2"
    android:scaleY="1.2"
    android:text="Буквы"
    app:layout_constraintBottom_toTopOf="@+id/switch2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent" />

<Switch
    android:id="@+id/switch2"
    android:layout_width="309dp"
    android:layout_height="62dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:scaleX="1.2"
    android:scaleY="1.2"
    android:text="Разный регистр"
    app:layout_constraintBottom_toTopOf="@+id/switch3"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent" />

<Switch
    android:id="@+id/switch3"
    android:layout_width="309dp"
    android:layout_height="62dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:scaleX="1.2"
    android:scaleY="1.2"
    android:text="Спецсимволы"
    app:layout_constraintBottom_toTopOf="@+id/button"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent" />

<EditText
    android:id="@+id/editTextNumber"
    android:layout_width="167dp"
    android:layout_height="50dp"
    android:ems="10"
    android:gravity="bottom"
    android:inputType="numberSigned"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="@+id/textView2"
    app:layout_constraintTop_toBottomOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>